<!--pages/about/about.wxml-->
<view class="page">
  <view class="weui-msg">
    <view class="weui-msg__icon-area">
      <image src="/res/app_icon.png" mode="aspectFit"></image>
    </view>
    <view class="weui-msg__text-area">
      <view class="weui-flex">
        <navigator url="/pages/logs/logs" class="weui-msg__title weui-flex__item">小广财 {{version}}</navigator>
      </view>
      <view class="weui-msg__desc" style="text-align: left;">
        <view>Thanks:</view>
        <view>https://github.com/WeGdufe/MovingGdufe-Android</view>
        <view>https://github.com/WeGdufe/SmallGdufe-WxApp</view>
      </view>
    </view>
    <view class="weui-msg__opr-area">
      <view class="weui-btn-area weui-flex">
        <button open-type="contact" class="weui-btn weui-flex__item" type="primary">反馈</button>
      </view>
    </view>
    <view class="weui-msg__extra-area">
      <view class="weui-footer">
        <view class="weui-footer__links" bindtap="copyWeChat">
          <view class="weui-footer__link">联系作者</view>
        </view>
        <view class="weui-footer__text">Copyright © 2017 14信院小发</view>
      </view>
    </view>
  </view>
</view>